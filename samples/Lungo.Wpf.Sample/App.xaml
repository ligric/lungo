<Application x:Class="Lungo.Wpf.Sample.App" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:lungo="clr-namespace:Lungo.Wpf;assembly=Lungo" 
             Startup="OnAppStartup">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Styles/ToggleButtonStyle.xaml"/>
                <ResourceDictionary Source="/Styles/WindowStyle.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <lungo:ThemeColorsDictionary x:Key="WindowThemeColor">
                <Color x:Key="Dark">#2b2731</Color>
                <Color x:Key="Light">#cac4b8</Color>
            </lungo:ThemeColorsDictionary>
        </ResourceDictionary>
    </Application.Resources>
</Application>
